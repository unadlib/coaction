{
  "compilerOptions": {
    "target": "esnext",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "coaction": ["packages/core/index.ts"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["es2019", "ESNext.Promise", "dom"],
    "strict": true,
    "stripInternal": true
  },
  "exclude": [
    "examples",
    "templates",
    "**/dist/**",
    "**/.turbo/**",
    "packages/**/benchmark/**"
  ]
}
