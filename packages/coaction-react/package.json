{
  "name": "@coaction/react",
  "version": "1.0.1",
  "description": "A Coaction integration tool for React",
  "keywords": [
    "state",
    "coaction",
    "react",
    "hook"
  ],
  "authors": [
    "Michael Lin <unadlib@gmail.com> (https://github.com/unadlib)"
  ],
  "homepage": "https://github.com/unadlib/coaction/tree/main/packages/coaction-react#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/unadlib/coaction.git",
    "directory": "packages/coaction-react"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "test": "vitest run test",
    "build": "tsup index.ts --format cjs,esm --dts --clean --out-dir dist",
    "dev": "tsup index.ts --format cjs,esm --dts --watch --out-dir dist"
  },
  "bugs": {
    "url": "https://github.com/unadlib/coaction/issues"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "coaction": "^1.0.1",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "coaction": {
      "optional": true
    }
  },
  "dependencies": {
    "use-sync-external-store": "^1.6.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/use-sync-external-store": "^1.5.0",
    "coaction": "^1.0.1",
    "jsdom": "^28.1.0",
    "jsdom-global": "^3.0.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "author": "unadlib"
}
